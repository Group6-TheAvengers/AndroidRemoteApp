<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chatchai.ui.UI"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/background"
    android:backgroundTintMode="src_over">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <Switch
            android:layout_width="137dp"
            android:layout_height="35dp"
            android:text="Bluetooth"
            android:id="@+id/switch1"
            android:layout_marginStart="27dp"
            android:state_checked="false"
            android:layout_marginTop="200dp"
            android:clickable="true"
            android:contextClickable="true"
            android:textColor="#474646"
            android:visibility="visible"
            android:typeface="sans"
            android:textStyle="bold"

            android:layout_row="0"
            android:layout_column="0"
            android:textSize="18sp"
            android:trackTint="@android:color/holo_red_dark"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:text="Search"
            android:id="@+id/searchbutton"
            android:clickable="true"
            android:theme="@style/AppTheme"
            android:typeface="sans"
            android:textAlignment="center"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginTop="200dp"
            android:layout_columnSpan="1"
            android:layout_gravity="left|center_horizontal"
            />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        >

        <Spinner
            android:layout_width="320dp"
            android:layout_height="37dp"
            android:id="@+id/dropdown"
            android:paddingStart="0dp"
            android:layout_gravity="center"
            android:spinnerMode="dropdown"
            android:clickable="true"
            android:contextClickable="false"
            android:dropDownSelector="#ffffff"
            android:popupBackground="#ffffff"
            android:textAlignment="center"
            android:visibility="visible"
            android:background="#67930606"
            android:layout_marginLeft="57dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/connect_before"
            android:background="@drawable/connect_button_animation"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_marginBottom="18dp"/>

    </RelativeLayout>

</RelativeLayout>


