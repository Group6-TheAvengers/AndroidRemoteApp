<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainLayout"
    tools:context="com.sahragard.myremote.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bluetooth status"
            android:id="@+id/statusUpdate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Off"
            android:id="@+id/disconnect"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="49dp"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth On"
            android:id="@+id/connect"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_alignBottom="@+id/gridLayout"
            android:layout_alignRight="@+id/gridLayout"
            android:layout_alignEnd="@+id/gridLayout"
            android:layout_gravity="bottom" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="97dp"
            android:id="@+id/spinner"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_below="@+id/connectDevice"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left|center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Connect"
            android:id="@+id/connectDevice"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/gridLayout"
            android:layout_alignEnd="@+id/gridLayout"
            android:layout_gravity="center_vertical|right" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:id="@+id/upButton"
        android:layout_above="@+id/brake"
        android:layout_alignLeft="@+id/brake"
        android:layout_alignStart="@+id/brake"
        android:layout_row="3"
        android:layout_column="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:id="@+id/downButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/leftButton"
        android:layout_toEndOf="@+id/leftButton"
        android:layout_row="3"
        android:layout_column="2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"
        android:id="@+id/rightButton"
        android:layout_above="@+id/downButton"
        android:layout_toRightOf="@+id/downButton"
        android:layout_toEndOf="@+id/downButton"
        android:layout_row="3"
        android:layout_column="3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Left"
        android:id="@+id/leftButton"
        android:layout_above="@+id/downButton"
        android:layout_toLeftOf="@+id/brake"
        android:layout_toStartOf="@+id/brake"
        android:layout_row="3"
        android:layout_column="4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brake"
        android:id="@+id/brake"
        android:layout_above="@+id/downButton"
        android:layout_centerHorizontal="true"
        android:layout_row="3"
        android:layout_column="6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="180"
        android:id="@+id/drift"
        android:layout_row="3"
        android:layout_column="7"
        android:layout_above="@+id/upButton"
        android:layout_alignRight="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout" />

</RelativeLayout>
